{
  "compilerOptions": {
    "target": "ES2020",                
    "module": "ESNext",                
    "lib": ["ES2020", "DOM"],          
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}